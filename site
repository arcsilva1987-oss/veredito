  <script>
    // Pequena lógica de exemplo: validação leve e feedback
    function handleSubmit(e){
      e.preventDefault();
      const nome = document.getElementById('nome').value.trim();
      const email = document.getElementById('email').value.trim();
      if(!nome || !email){
        alert('Por favor, preencha nome e e-mail.');
        return false;
      }

      // Aqui você ligaria para sua API de backend para enviar o formulário.
      alert('Solicitação enviada! Iremos responder pelo e-mail informado.');
      e.target.reset();
      return false;
    }
  </script>
